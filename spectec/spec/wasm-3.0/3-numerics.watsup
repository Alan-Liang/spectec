;; Packed values

def $packnum(lanetype, const_($lunpack(lanetype))) : lconst_(lanetype)
    hint(show $pack_(%,%))
def $packnum(numtype, c) = c
def $packnum(packedtype, c) = $wrap($size($lunpack(packedtype)), $packedsize(packedtype), c)

def $unpacknum(lanetype, lconst_(lanetype)) : const_($lunpack(lanetype))
    hint(show $unpack_(%,%))
def $unpacknum(numtype, c) = c
def $unpacknum(packedtype, c) = $ext($packedsize(packedtype), $size($lunpack(packedtype)), U, c)


;; Vectors

def $lanes_(shape, vconst_(V128)) : lconst_($lanetype(shape))*
    hint(show $lanes_(%,%))

def $invlanes_(shape, lconst_($lanetype(shape))*) : vconst_(V128)
    hint(show $lanes^(-1)#_%#(%,%))
def $invlanes_(sh, c*) = vc  -- if c* = $lanes_(sh, vc)

def $halfop(half, nat, nat) : nat
def $halfop(LOW, i, j) = i
def $halfop(HIGH, i, j) = j

